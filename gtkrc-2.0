style "tasklist-color" {
  fg[NORMAL]               = "#6a6a81"
  fg[PRELIGHT]             = "#3d3d3d"
  fg[ACTIVE]               = "#010"
}

style "tasklist-dark-bg" {
  bg[ACTIVE] = "#fcfcfd"
  bg[NORMAL] = "#ddd"

  engine "xfce"
  {
    boxfill
    {
      fill_style = gradient
    }
  }
}


widget_class "XfcePanelWindow.*.XfceTaskListPlugin.*.XfceTasklist.XfceArrowButton.XfceHVBox.GtkLabel" style "tasklist-color"

widget_class "XfcePanelWindow.PanelItembar.XfceTasklistPlugin.*.XfceTasklist.*" style "tasklist-dark-bg"
